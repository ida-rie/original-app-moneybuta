generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(uuid())
  authUserId String   @unique                  // Supabase Authと紐づけ
  email      String   @unique
  name       String
  role       String                            // "parent", "child"
  parentId   String?                           // 子アカウント用
  iconUrl    String?                           // プロフィール画像URL
  createdAt  DateTime @default(now())

  // ↓ 自己参照リレーションを定義（子→親、親→子）
  parent     Users?    @relation("ParentChild", fields: [parentId], references: [id])
  children   Users[]   @relation("ParentChild")
}
